<div class="body">
    <div class="modal">
        <span onclick="fechar()" class="fechar">&times;</span>
        <div id="boxCadastro">
            <h3>Adicionar Salas</h3>
            <div class="linha"></div>
            
            <form>
                <div class="boxNomeeSistema" id="boxNomeCompleto">
                    <div>
                        <p>Nome da Sala</p>
                        <input type="text" class="botao" id="NomeSala">      
                    </div>
                   
                    <div>
                        <p>Sistemas</p>
                        <select class="botao" id="SelectSistema">
                            <option value="0">Selecione:</option>
                            <option value="1">Possui</option>
                            <option value="2">Não Possui</option>
                        </select>
                    </div> 
                </div>

                <div class="boxCredenciais" id="boxCapacidade">
                    <div>
                        <p>Area</p>
                        <select class="botao" id="Select">
                            <option value="0">Selecione:</option>
                            <option value="1">Interna</option>
                            <option value="2">Externa</option>
                            <option value="3">Outra</option>
                        </select>
                    </div>  
                    
                    <div>
                        <p>Capacidade</p>
                        <input type="number" class="botao">
                    </div>
                     
                </div>       
                <div class="boxCredenciais" id="boxCapacidade">
                       
                        
                        <div>
                            <p>Descrição</p>
                            <textarea id="descrição" class="botao"></textarea>
                            <!-- <input type="text" id="descrição" class="botao"> -->
                        </div>
                         
                    </div>       
                <div class="BotaoConcluireCancelar" id="boxConcluir">
                    <div>
                        <input type="submit" id="botaoConcluir" value="Concluir">                      
                    </div>
                    <div>
                        <input type="submit" id="botaoCancelar" value="Cancelar">                      
                    </div>
                </div>
            </form>
        </div>
    </div>    
</div>